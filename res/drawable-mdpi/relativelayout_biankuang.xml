<?xml version="1.0" encoding="UTF-8"?>    
<!-- 不带圆角 白色背景 灰色边框 无下边框 长方体 -->    
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >    
    <item>    
        <shape>    
            <solid android:color="#00FFFFFF" />    
            <stroke    
                android:width="1dp"    
                android:color="#ffa8abad" />    
        </shape>    
    </item>    
    <item    
        android:left="10dp"    
        android:right="10dp"    
        android:top="10dp">    
        <shape>    
            <solid android:color="#00FFFFFF" />    
            <stroke    
                android:width="1dp"    
                android:color="#00ffffff" />    
        </shape>    
    </item>    
</layer-list>  